<h1 class="title">ユーザー一覧</h1>

<%= link_to '新規登録', new_user_path, { class: 'button is-primary' } %>

<table class="table is-bordered is-fullwidth">
  <thead>
    <tr class="has-background-info">
      <th>ID</th>
      <th>名前</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to '編集', edit_user_path(user), { class: 'button is-link' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
